<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
  xmlns="http://xmlns.jcp.org/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

  <persistence-unit name="CitySprouts">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider
    </provider>
    
    <!--  entities -->
  	<class>	com.skilldistillery.midterm.entities.Address</class>
  	<class>	com.skilldistillery.midterm.entities.Buyer</class>
  	<class>	com.skilldistillery.midterm.entities.User</class>
  	<class>	com.skilldistillery.midterm.entities.Category</class>
  	<class>	com.skilldistillery.midterm.entities.Comodity</class>
  	<class>	com.skilldistillery.midterm.entities.DeliverDetails</class>
  	<class>	com.skilldistillery.midterm.entities.Driver</class>
  	<class>	com.skilldistillery.midterm.entities.Inventory</class>
  	<class>	com.skilldistillery.midterm.entities.Item</class>
  	<class>	com.skilldistillery.midterm.entities.Payment</class>
  	<class>	com.skilldistillery.midterm.entities.Purchase</class>
  	<class>	com.skilldistillery.midterm.entities.PurchaseItem</class>
  	<class>	com.skilldistillery.midterm.entities.PurchaseStatus</class>
  	<class>	com.skilldistillery.midterm.entities.Role</class>
  	<class>	com.skilldistillery.midterm.entities.Seller</class>
  	<class>	com.skilldistillery.midterm.entities.Unit</class>
  	<class>	com.skilldistillery.midterm.entities.User</class>
  	<class>	com.skilldistillery.midterm.entities.Variety</class>
   


    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/citysproutsdb?useSSL=false" />
      <property name="javax.persistence.jdbc.user" value="citysproutsuser"/>
      <property name="javax.persistence.jdbc.password" value="citysproutsuser" />
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />

      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
      <property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />

      <property name="hibernate.c3p0.max_size" value="5" />
      <property name="hibernate.c3p0.min_size" value="0" />
      <property name="hibernate.c3p0.acquire_increment" value="1" />
      <property name="hibernate.c3p0.idle_test_period" value="300"/>
      <property name="hibernate.c3p0.max_statements" value="0" />
      <property name="hibernate.c3p0.timeout" value="60" />
    </properties>
    
  </persistence-unit>
</persistence>